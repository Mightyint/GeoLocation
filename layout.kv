#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition
#: import MapView kivy_garden.mapview.MapView
<Function>:
	orientation: 'vertical'
	canvas.before:
		Color:
			rgb: (1,1,1,1)
		Rectangle:
			pos: self.pos
			size: self.size
	Screen:
		name: 'Login'
		BoxLayout:
			size_hint_y: .1
			size_hint_x: .5
			pos_hint: {'center_x':.50,'center_y':.70}
			padding: "15dp"

			MDTextField:
				id: link_text
				hint_text: 'Example@gmail.com'
		BoxLayout:
			size_hint_y: .1
			size_hint_x: .5
			padding: "15dp"
			pos_hint: {'center_x':.50,'center_y':.60}
			MDTextField:
				password: True
				id: image_name
				hint_text: 'Password'

		MDRectangleFlatButton:
			text: 'Login'
			pos_hint: {'center_x': .3, 'center_y': .1}
			on_release:
				root.transition = SlideTransition(direction='left') 
				root.Main_page(root)


		MDRectangleFlatButton:
			text: 'Register'
			pos_hint: {'center_x': .7, 'center_y': .1}
			
	Screen:
		name: 'mainscreen'
		MDToolbar:
			title: 'Lubo'
			left_action_items: [["menu", lambda x: app.callback()]]
			font_style: 'H5'
			pos_hint: {"top":1}
			md_bg_color: 0,0,0,1
			specific_text_color: 1,1,1,1
			elevation: 8
		BoxLayout:
			pos_hint: {'center_x':.5,'center_y':.65}
			size_hint_y: .5
			size_hint_x: 1
			MapView:
				lat: 50.3 
				lon:3.05 
				zoom:13
				double_tap_zoom: True
				map_source: "osm"
				MapMarkerPopup:
					lat: 50.3
					lon: 3.05
					source: "marker1.png"
					Button:
						text: 'Food truck'
						on_release:
							print("Food Truck")
		MDRectangleFlatButton:
			text: 'Navigate'
			on_release: root.Map_page
			pos_hint: {'center_x': .3, 'center_y': .1}

		MDRectangleFlatButton:
			text: 'List'
			pos_hint: {'center_x': .7, 'center_y': .1}
			on_release:
				root.transition = SlideTransition(direction='left') 
				root.view_image(root)

	Screen:
		name: 'image'

		BoxLayout:
			size_hint_y: .6
			pos_hint: {'center_y':.5}
			padding: 10
			Image:
				id: img_

		MDLabel:
			text: "QR Code"
			font_style: 'H4'
			pos_hint: {'center_y':.9}
			halign: 'center'

		MDRectangleFlatButton:
			text: 'Back'
			pos_hint: {'center_x': .3, 'center_y': .1}
			on_release: 
				root.transition = SlideTransition(direction='right')
				root.current = 'mainscreen'


